<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bcColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:background="@color/bcColor"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:paddingEnd="5dp"
                android:text="السلام عليكم ورحمه الله وبركاته"
                android:fontFamily="@font/cairo_regular"
                android:textSize="15sp"
                android:background="@drawable/bcsendmessage"/>
            <TextView
                android:id="@+id/messageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="#808588"
                android:textAlignment="textEnd"
                android:paddingEnd="10dp"
                android:text="12-12-2023, 12:55:12pm"/>
        </LinearLayout>
        <!--        <de.hdodenhof.circleimageview.CircleImageView-->
        <!--            android:id="@+id/receiveProfileImage"-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_weight="0.5"-->
        <!--            android:src="@drawable/profile"-->
        <!--            android:layout_gravity="center"/>-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>