<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        tools:ignore="UnusedAttribute"
        android:background="@color/bcColor">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            tools:ignore="RtlCompat,UnusedAttribute">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top"
                    android:src="@drawable/profile" />
                <TextView
                    android:id="@+id/senderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="bakrey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_card"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageChat"
                    android:layout_width="220dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="2dp"
                    app:riv_border_color="@color/black"
                    app:riv_border_width="0dp"
                    app:riv_corner_radius="5dp" />


                <TextView
                    android:id="@+id/tv_msg_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:paddingStart="5dp"
                    android:textAlignment="textEnd"
                    android:paddingEnd="5dp"
                    android:textIsSelectable="true"
                    android:text="وعليكم السلام عليكم ورحمه الله وبركاته"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="15sp"
                    android:background="@drawable/bcrecivemessage"
                    />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textColor="#808588"
                    android:layout_margin="3dp"
                    android:textAlignment="textStart"
                    android:paddingStart="10dp"
                    android:text="12-12-2023, 12:55:12pm" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
